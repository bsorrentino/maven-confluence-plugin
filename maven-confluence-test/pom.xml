                    <!--title>my-site-generation-test ${project.version}</title-->
                    <labels>
                        <label>maven</label>
                    </labels>
                    <properties>
                        <evaluation>(y)</evaluation>
                        <page>classpath:plugin-report.properties</page>
                        <page1>file://${basedir}/src/main/resources/confluence.html</page1>
                    </properties>
                    <sslCertificate />
                    <!--
                    <sslCertificate>
                        <ignore>true</ignore>
                    </sslCertificate>
                    -->

                </configuration>
                <executions>
