                                <active>true</active>
                            </deployState>
                        </configuration>
                    </execution>
                    <!--
                    mvn confluence-reporting:deploy@issue129
                    mvn confluence-reporting:delete@issue129
                    -->
                    <execution>
                        <id>issue129</id>
                        <goals>
                            <goal>deploy</goal>
                            <goal>delete</goal>
                        </goals>
