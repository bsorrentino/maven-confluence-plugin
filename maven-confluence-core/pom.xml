        <dependency>
            <groupId>org.bsc.util</groupId>
            <artifactId>minitemplator-repackaged</artifactId>
        </dependency>

        <dependency>
            <groupId>com.beust</groupId>
            <artifactId>jcommander</artifactId>
            <version>1.32</version>
            <type>jar</type>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.pegdown</groupId>
            <artifactId>pegdown</artifactId>
        </dependency>

    </dependencies>


    <build>

        <plugins>
            <!-- Separates the unit tests from the integration tests. -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <trimStackTrace>false</trimStackTrace>
                    <skip>true</skip>
                </configuration>
            </plugin>
            
            <!--
            ===================================
            JAXB SCHEMA GENERATION

            jaxb2:schemagen
            ===================================
            -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <version>2.3</version>
                <configuration>
                    <sources>
                        <source>src/main/java/org/bsc/confluence/model/Site.java</source>
                        <source>src/main/java/org/bsc/confluence/model/package-info.java</source>
                    </sources>
                    <outputDirectory>${project.build.directory}/schemas</outputDirectory>
                    
                    <!-- Post-processing 2: Transform the generated XML Schemas.-->
                    <transformSchemas>
                        <transformSchema>
                            <uri>https://github.com/bsorrentino/maven-confluence-plugin</uri>
                            <toPrefix>bsc</toPrefix>
                            <toFile>site-schema-${project.version}.xsd</toFile>
                        </transformSchema>  
                    </transformSchemas>    
          
                </configuration>
            </plugin>

        </plugins>

    </build>

    <dependencyManagement>
        <dependencies>
        </dependencies>
    </dependencyManagement>

    <profiles>
        <profile>
            <id>utest</id>
            <activation><activeByDefault>true</activeByDefault></activation>
            <build>
            <plugins>    
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                		<skip>false</skip>
	                <excludes>
	                    <exclude>**/*IntegrationTest.java</exclude>
	                </excludes>
                </configuration>
            </plugin>
            </plugins>    
            </build>
        </profile>
    			
        <profile>
            <id>itest</id>
            <build>
            <plugins>    
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                		<skip>false</skip>
	                <includes>
	                    <include>**/*IntegrationTest.java</include>
	                </includes>
                </configuration>
            </plugin>
            </plugins>    
            </build>
        </profile>
        
    </profiles>
</project>
